{
    "name": "@domdomegg/postal-vote-server",
    "private": true,
    "main": "serverless.ts",
    "scripts": {
        "postinstall": "cp -n src/env/local.template.ts src/env/local.ts && cp -n src/env/local.ts src/env/env.ts",
        "start": "npm run start:local",
        "start:local": "cp src/env/local.ts src/env/env.ts && serverless offline start",
        "deploy:dev": "cp src/env/dev.ts src/env/env.ts && serverless deploy --verbose",
        "deploy:prod": "cp src/env/prod.ts src/env/env.ts && serverless deploy --verbose",
        "build": "npm run build:local",
        "build:local": "cp src/env/local.ts src/env/env.ts && serverless package",
        "test": "TZ=utc jest",
        "test:watch": "TZ=utc jest --watch",
        "type-check": "tsc",
        "lint": "eslint 'src/**/*.ts' 'serverless.ts'"
    },
    "engines": {
        "node": ">=14.15.0"
    },
    "dependencies": {
        "@aws-sdk/client-ses": "^3.78.0",
        "@aws-sdk/node-http-handler": "^3.38.0",
        "ajv": "^8.6.3",
        "axios": "^0.27.2",
        "http-errors": "^1.8.0",
        "nodemailer": "^6.7.3",
        "pdf-lib": "^1.17.1",
        "source-map-support": "^0.5.21"
    },
    "devDependencies": {
        "@serverless/typescript": "^2.61.0",
        "@types/aws-lambda": "^8.10.71",
        "@types/http-errors": "^1.8.1",
        "@types/jest": "^27.0.2",
        "@types/node": "^14.14.25",
        "@types/nodemailer": "^6.4.4",
        "@typescript-eslint/eslint-plugin": "^4.32.0",
        "@typescript-eslint/parser": "^4.32.0",
        "aws-lambda": "^1.0.6",
        "aws-ses-v2-local": "^2.0.1",
        "eslint": "^7.32.0",
        "eslint-config-blvd": "^1.2.1",
        "fork-ts-checker-webpack-plugin": "^7.2.11",
        "jest": "^27.3.1",
        "serverless": "^3.17.0",
        "serverless-offline": "^8.7.0",
        "serverless-offline-ses-v2": "^1.0.1",
        "serverless-webpack": "^5.7.1",
        "ts-jest": "^27.0.7",
        "ts-loader": "^9.2.6",
        "ts-node": "^10.2.1",
        "typescript": "^4.4.3",
        "webpack": "^5.57.1",
        "webpack-node-externals": "^3.0.0"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/env/*.ts",
            "src/env/env.ts"
        ]
    }
}